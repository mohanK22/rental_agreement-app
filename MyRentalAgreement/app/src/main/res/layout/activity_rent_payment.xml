<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".transaction.RentPaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/default_value">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_ip_rent_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_rent_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rent Durantion (In Months)"
                android:inputType="number"
                android:textColor="@color/lightBlack" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_ip_refundable_deposit_amt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_refundable_deposit_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Refundable Deposit Amount"
                android:inputType="number"
                android:textColor="@color/lightBlack" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_ip_monthly_amt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_monthly_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Monthly Rent Amount"
                android:inputType="number"
                android:textColor="@color/lightBlack" />

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:id="@+id/txtViewRentType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Rent Type"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/rgRentType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdFixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Fixed"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rdVariable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Variable"
                android:textSize="16sp" />

        </RadioGroup>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_ip_fixed_amt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_fixed_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fixed Type Amount"
                android:inputType="number"
                android:textColor="@color/lightBlack" />

        </android.support.design.widget.TextInputLayout>


        <!--<android.support.design.widget.TextInputLayout
            android:id="@+id/txt_ip_variable_amt"
