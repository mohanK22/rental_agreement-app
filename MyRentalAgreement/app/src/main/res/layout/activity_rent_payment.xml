        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_ip_variable_month9_amt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_variable_month9_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Month-9 Rent Amount"
                android:inputType="number"
                android:textColor="@color/lightBlack" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_ip_variable_month10_amt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_variable_month10_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Month-10 Rent Amount"
                android:inputType="number"
                android:textColor="@color/lightBlack" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_ip_variable_month11_amt"
